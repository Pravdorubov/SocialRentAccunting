@model             House

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Редактирование помещения</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommonArea" class="control-label"></label>
                <input asp-for="CommonArea" class="form-control" />
                <span asp-validation-for="CommonArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatsCount" class="control-label"></label>
                <input asp-for="FlatsCount" class="form-control" />
                <span asp-validation-for="FlatsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br/>

<div class="input-group">
    <a class="btn-primary btn" asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
