@model             Contract

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Редактирование договора</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Number" class="control-label"></label>
                <input asp-for="Order.Number" class="form-control" />
                <span asp-validation-for="Order.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Date" class="control-label"></label>
                <input asp-for="Order.Date" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
                <span asp-validation-for="Order.Date" class="text-danger"></span>
            </div>

            <div class="form-group" id="house">
                <label asp-for="House" class="control-label"></label>
                <input asp-for="HouseId" class="form-control" type="hidden" />
                <div class="input-group">
                    <input asp-for="House.Address" class="form-control" />
                    <button class="btn btn-outline-secondary" type="button" id="FindHouse">Выбрать</button>
                    <button class="btn btn-outline-secondary" type="button" id="CreateHouse">Добавить</button>
                </div>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>

            <div class="form-group" id="tenant">
                <label asp-for="Tenant" class="control-label"></label>
                <input asp-for="TenantId" class="form-control" type="hidden" />
                <div class="input-group">
                    <input asp-for="Tenant.FullName" class="form-control" />
                    <button class="btn btn-outline-secondary" type="button" id="FindTenant">Выбрать</button> 
                    <button class="btn btn-outline-secondary" type="button" id="CreateTenant">Добавить</button>
                </div>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>

            <div class="form-group" id="landlord">
                <label asp-for="Landlord" class="control-label"></label>
                <input asp-for="LandlordId" class="form-control" type="hidden" />
                <div class="input-group">
                    <input asp-for="Landlord.Name" class="form-control" />
                    <button class="btn btn-outline-secondary" type="button" id="FindLandlord">Выбрать</button>
                        <button class="btn btn-outline-secondary" type="button" id="CreateLandlord">Добавить</button>
                </div>
                <span asp-validation-for="LandlordId" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br/>

<div class="input-group">
    <a class="btn-primary btn" asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
