@model SocialRentAccunting.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h2>Вход на сайт</h2>
 
  <div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Введите имя</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Введите пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>