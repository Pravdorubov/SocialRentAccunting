@model SocialRentAccunting.ViewModels.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<h2>Регистрация</h2>
 <div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Введите имя</label>
                    <input type="text" asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"/>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Введите пароль</label><br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label><br />
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger" />
                </div>
                <div  class="form-group">
                    <input type="submit" value="Регистрация" class="btn-primary" />
                </div>
        </form>
    </div>
</div>